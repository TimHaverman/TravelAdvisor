@model IEnumerable<TravelAdvisor.Models.Day>

@{
    ViewBag.Title = "Index";
}
<section id="main" class="wrapper">
    <div class="container">
        <h3>Day Index</h3>
        <table class="alt">
            <tr>
                <th>
                    Trip Name
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    Spent Each Day
                </th>
                <th>
                    Day
                </th>
                <th> </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Trip.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ActualTotal)
                    </td>
                    <td>
                        @Html.ActionLink("Day " + item.DayNumber, "Details", "Days", new { id = item.Id }, null)
                    </td>
                    <td>
                        <ul class="actions">
                            <li class="button alt small" style="padding: 0 2.2em; padding-top: 0px; padding-right: 3.2em; padding-bottom: 0px;padding-left: 3.2em;">@Html.ActionLink("Edit", "Edit", new { id = item.Id })</li>
                            <li class="button alt small" style="padding: 0 2.2em; padding-top: 0px; padding-right: 2.2em; padding-bottom: 0px;padding-left: 2.2em;">@Html.ActionLink("Add  New Item", "CreateExpenseVM", "Days", new { id = item.Id }, null)</li>
                        </ul>
                    </td>
                </tr>
            }
        </table>
    </div>
</section>