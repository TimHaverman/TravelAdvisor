@model TravelAdvisor.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
    <head>        
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        
        <link href="~/Content/main.css" rel="stylesheet" />
    </head>
    <section id="main" class="wrapper">
        <div class="container">

            <header class="major special">
                <h2>@ViewBag.Title.</h2>
                <p>Register to start planning your next vacation</p>
            </header>

            <a href="#" class="image fit"><img src="~/images/pic01.jpg" alt="" /></a>

        </div>
            <section id="main" class="wrapper">
                <div class="container">
                    
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <section>
                        <form method="post">
                            <div class="row uniform 50%">


                                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                                {

                                    @Html.AntiForgeryToken()



                                    <div class="6u 12u$(xsmall)">
                                        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                                        <div class="6u 12u$(xsmall)">
                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="6u 12u$(xsmall)">
                                        @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })
                                        <div class="6u 12u$(xsmall)">
                                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="6u 12u$(xsmall)">
                                        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                                        <div class="6u 12u$(xsmall)">
                                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="6u 12u$(xsmall)">
                                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                                        <div class="6u 12u$(xsmall)">
                                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                        </div>
                                    </div>

                                    <div class="6u 12u$(xsmall)">
                                        @Html.LabelFor(m => m.FName, new { @class = "col-md-2 control-label" })
                                        <div class="6u 12u$(xsmall)">
                                            @Html.TextBoxFor(m => m.FName, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="6u 12u$(xsmall)">
                                        @Html.LabelFor(m => m.LName, new { @class = "col-md-2 control-label" })
                                        <div class="6u 12u$(xsmall)">
                                            @Html.TextBoxFor(m => m.LName, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="6u 12u$(xsmall)">
                                        @Html.LabelFor(m => m.MName, new { @class = "col-md-2 control-label" })
                                        <div class="6u 12u$(xsmall)">
                                            @Html.TextBoxFor(m => m.MName, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="6u 12u$(xsmall)">
                                        @Html.LabelFor(m => m.PNumber, new { @class = "col-md-2 control-label" })
                                        <div class="6u 12u$(xsmall)">
                                            @Html.TextBoxFor(m => m.PNumber, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="6u 12u$(xsmall)">
                                        <div class="select-wrapper">
                                            <label> Gender</label>
                                            @Html.EnumDropDownListFor(m => m.Gender, "Choose not to answer", new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="6u 12u$(xsmall)">
                                        @Html.LabelFor(m => m.SAddress, new { @class = "col-md-2 control-label" })
                                        <div class="6u 12u$(xsmall)">
                                            @Html.TextBoxFor(m => m.SAddress, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="6u 12u$(xsmall)">
                                        @Html.LabelFor(m => m.City, new { @class = "col-md-2 control-label" })
                                        <div class="6u 12u$(xsmall)">
                                            @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="6u 12u$(xsmall)">
                                        @Html.LabelFor(m => m.State, new { @class = "col-md-2 control-label" })
                                        <div class="6u 12u$(xsmall)">
                                            @Html.TextBoxFor(m => m.State, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="6u 12u$(xsmall)">
                                        @Html.LabelFor(m => m.ZCode, new { @class = "col-md-2 control-label" })
                                        <div class="6u 12u$(xsmall)">
                                            @Html.TextBoxFor(m => m.ZCode, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" class="btn btn-default" value="Register" />
                                        </div>
                                    </div>

                                }
                            </div>
                            
                        </form>
                    </section>
                </div>
            </section>
    </section>
    

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
<link href="~/Content/main.css" rel="stylesheet" />
        }
