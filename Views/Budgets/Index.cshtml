@model IEnumerable<TravelAdvisor.Models.Budget>

@{
    ViewBag.Title = "Index";
}

    <div class="container">           
                <h3>Budget Index</h3>          
            <table class="alt">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Amount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Department.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ActualTotal)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Amount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Department.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ActualTotal)
                        </td>
                        <td>
                            <ul class="actions">
                                <li class="button alt small" style="padding: 0 2.2em; padding-top: 0px; padding-right: 3.2em; padding-bottom: 0px;padding-left: 3.2em;">@Html.ActionLink("Edit", "Edit", new { id = item.Id })</li>
                            </ul>                           
                        </td>
                    </tr>
                }
            <tr>
                <td>@(Model.FirstOrDefault()?.Trip.budgetTotal)</td>
                <td>Departments Total</td>
                <td>@(Model.FirstOrDefault()?.Trip.actualTotal)</td>
                <td></td>
            </tr>
                <tfoot>
                    <tr>
                        <td colspan="2"></td>
                        <td></td>
                    </tr>
                </tfoot>
            </table>
    </div>
